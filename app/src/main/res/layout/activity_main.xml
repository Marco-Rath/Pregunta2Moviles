<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextX1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada X del primer punto"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextY1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada Y del primer punto"
        android:inputType="number" />
    <EditText
        android:id="@+id/editTextX2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada X del segundo punto"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextY2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada Y del segundo punto"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextX3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada X del tercer punto"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextY3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenada Y del tercer punto"
        android:inputType="number" />


    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_gravity="center_horizontal"
        android:onClick="Evento"
        />

    <TextView
        android:id="@+id/textViewPerimetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PerÃ­metro: "
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area: "
        android:layout_marginTop="15dp"
        android:textSize="20dp"/>

</LinearLayout>
